header.header 
    nav.nav.nav--tours
        a.nav__el(href="/") All tours 
        form.nav__search(autocomplete = 'off')
            button.nav__search-btn(title = "search tour")
                svg: use(xlink:href="/img/icons.svg#icon-search")
            div(class="autocomplete" )
                input(type="text" placeholder="Search tours"
                    class="nav__search-input")
    div.header__logo
        img(src="/img/logo-white.png" alt="Natours logo")
    nav.nav.nav--user
        if user
            a(class="nav__el nav__el--logout") Log Out
            a(href="/me" class="nav__el")
                img(src=`/img/users/${user.photo}`
                    alt=`Photo of ${user.name}`
                    class="nav__user-img")

                span= user.name
        else
            a(href="/login").nav__el Log in
            a(href='/signup').nav__el.nav__el--cta Sign up